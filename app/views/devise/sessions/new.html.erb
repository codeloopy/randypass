<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8 text-slate-600">
  <div class="mx-auto max-w-lg">
    <h2 class="text-center text-2xl font-bold sm:text-3xl">
      Log in
    </h2>
    
    <div class="mt-6 mb-0 space-y-4 rounded-lg p-8 shadow-2xl">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="mt-4">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, class: "w-full rounded-lg border-gray-600 p-4 pr-12 text-sm shadow-sm" %>
          </div>
          <div class="mt-4">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="mt-4">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="mt-5">
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "block w-third rounded-lg bg-slate-600 px-5 py-3 text-sm font-medium text-white text-center uppercase w-full" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="mt-5">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    
  </div>
</div>
